{
  "name": "cartoon-video-messenger",
  "version": "1.0.0",
  "description": "Mobile app for recording cartoon-filtered video messages",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:android": "eas build --platform android --profile preview",
    "build:android:production": "eas build --platform android --profile production",
    "build:local:android": "eas build --platform android --local --profile preview",
    "setup:hosting": "node -e \"require('fs').mkdirSync('hosting', {recursive: true}); require('fs').copyFileSync('download-page.html', 'hosting/index.html'); console.log('Hosting files ready!')\""
  },
  "dependencies": {
    "expo": "~50.0.0",
    "expo-av": "~13.10.0",
    "expo-camera": "~14.0.0",
    "expo-file-system": "~16.0.0",
    "expo-image-manipulator": "~11.0.0",
    "expo-media-library": "~15.0.0",
    "react": "18.2.0",
    "react-native": "0.74.5",
    "react-native-gesture-handler": "~2.14.0",
    "react-native-reanimated": "~3.6.0",
    "react-native-svg": "13.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "eas-cli": "^16.28.0"
  },
  "private": true
}
